%h1 Listing clientes

%table
  %thead
    %tr
      %th Nome
      %th Cpf
      %th Endereco
      %th Numero
      %th Cidade
      %th Estado
      %th Email
      %th
      %th
      %th

  %tbody
    - @clientes.each do |cliente|
      %tr
        %td= cliente.nome
        %td= cliente.cpf
        %td= cliente.endereco
        %td= cliente.numero
        %td= cliente.cidade
        %td= cliente.estado
        %td= cliente.email
        %td= link_to 'Show', cliente
        %td= link_to 'Edit', edit_cliente_path(cliente)
        %td= link_to 'Destroy', cliente, :method => :delete, :data => { :confirm => 'Are you sure?' }

